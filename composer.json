{
    "name": "jkniest/hue-it",
    "description": "PHP wrapper for the phillips hue api",
    "type": "library",
    "require": {
        "php": "^8.1|^8.2",
        "symfony/http-client": "^6.0",
        "illuminate/collections": "^9.0|^10.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.0",
        "jkniest/linting": ">=1.10.0",
        "friendsofphp/php-cs-fixer": "3.22.0",
        "pestphp/pest": "^2.8",
        "mockery/mockery": "^1.6"
    },
    "prefer-stable": true,
    "license": "MIT",
    "authors": [
        {
            "name": "Jordan Kniest",
            "email": "mail@jkniest.de"
        }
    ],
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "jkniest\\HueIt\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "jkniest\\HueIt\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "php-cs-fixer fix --config=.php-cs-fixer.php",
            "phpstan analyse src --level=max",
            "pest --coverage --min=100 --coverage-html=coverage"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
