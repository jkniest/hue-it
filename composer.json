{
    "name": "jkniest/hue-it",
    "description": "PHP wrapper for the phillips hue api",
    "type": "library",
    "require": {
        "php": "^8.1|^8.2",
        "symfony/http-client": "^6.0",
        "illuminate/collections": "^9.0|^10.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.0",
        "jkniest/linting": ">=1.10.0",
        "friendsofphp/php-cs-fixer": "3.21.1"
    },
    "prefer-stable": true,
    "license": "MIT",
    "authors": [
        {
            "name": "Jordan Kniest",
            "email": "mail@jkniest.de"
        }
    ],
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "jkniest\\HueIt\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "spec\\jkniest\\HueIt\\": "spec/"
        }
    },
    "scripts": {
        "test": [
            "PHP_CS_FIXER_IGNORE_ENV=True php-cs-fixer fix --config=.php-cs-fixer.php",
            "phpspec run --config phpspec_coverage.yml",
            "@php test-coverage.php",
            "phpstan analyse src --level=max"
        ]
    }
}
